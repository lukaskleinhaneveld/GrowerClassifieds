<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrowersClassified.Views.Products.ProductPage"
             Title="Products">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand">
            <Label Text="All products will be shown here in a list"
                   FontSize="40"
                   HorizontalTextAlignment="Center"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   Margin="0,20,0,0"/>
            <ScrollView HorizontalOptions="CenterAndExpand">
                <StackLayout Orientation="Vertical" Padding="10,5,10,0">
                    <ListView x:Name="ProductList" SeparatorVisibility="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <ViewCell.View>
                                        <Grid Padding="10,10" HeightRequest="500">
                                            <Label Text="{ Binding Product_Author }" 
                                                   x:Name="Product_Author"
                                                   MinimumHeightRequest="20"
                                                   HorizontalOptions="StartAndExpand"
                                                   BackgroundColor="Green"
                                                   Grid.Row="0"/>
                                            <Label Text="{ Binding Product_Title }"
                                                   MinimumHeightRequest="40"
                                                   HorizontalOptions="StartAndExpand"
                                                   BackgroundColor="Red"
                                                   Grid.Row="1"/>
                                            <Label Text="{ Binding Product_Description }"
                                                   MinimumHeightRequest="20"
                                                   HorizontalOptions="StartAndExpand"
                                                   BackgroundColor="Green"
                                                   Grid.Row="2"/>
                                            <Label Text="{ Binding Product_Make }"
                                                   MinimumHeightRequest="40"
                                                   HorizontalOptions="StartAndExpand"
                                                   BackgroundColor="Red"
                                                   Grid.Row="3"/>
                                            <Label Text="{ Binding Product_Model }"
                                                   MinimumHeightRequest="20"
                                                   HorizontalOptions="StartAndExpand"
                                                   BackgroundColor="Green"
                                                   Grid.Row="4"/>
                                            <Label Text="{ Binding Product_Year }" 
                                                   MinimumHeightRequest="40"
                                                   HorizontalOptions="StartAndExpand"
                                                   BackgroundColor="Red"
                                                   Grid.Row="5"/>
                                            <Label Text="{ Binding Product_Price }"
                                                   MinimumHeightRequest="20"
                                                   HorizontalOptions="StartAndExpand"
                                                   BackgroundColor="Green"
                                                   Grid.Row="6"/>
                                        </Grid>
                                    </ViewCell.View>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>