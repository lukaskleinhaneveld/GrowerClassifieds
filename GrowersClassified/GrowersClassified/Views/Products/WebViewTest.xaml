<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrowersClassified.Views.Products.WebViewTest"
             Title="WebView">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator x:Name="loadingWebView" 
                               Color="Red" 
                               IsRunning="True"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal" Padding="10,10">
                <!-- Back Button -->
                <Button x:Name="webView_back" Text="&lt;" FontSize="Large" HorizontalOptions="StartAndExpand"/>
                <!-- Forward Buttom-->
                <Button x:Name="webView_forward" Text="&gt;" FontSize="Large" HorizontalOptions="End"/>
            </StackLayout>
            <WebView x:Name="webView" 
                     VerticalOptions="FillAndExpand" 
                     HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>